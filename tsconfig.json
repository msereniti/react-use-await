{
  "compilerOptions": {
    "declaration": true,
    "downlevelIteration": true,
    "lib": [ "dom", "ESNext" ],
    "module": "commonjs",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": ".",
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es5",
    "esModuleInterop": true
  },
  "files": [ "src/index.ts" ]
}
